label-empty-padding = 1

;===================================================================

[module/previous]
type = custom/ipc
format-font = 2
; Default
hook-0 = echo ""
; When spotify active
hook-1 = echo " ﭣ "
click-left = "spotifyctl -q previous"
format-foreground = #7aa2f7


[module/next]
type = custom/ipc
format-font = 2
; Default
hook-0 = echo ""
; When spotify active
hook-1 = echo " ﭡ "
click-left = "spotifyctl -q next"
format-foreground = #7aa2f7


[module/playpause]
type = custom/ipc
format-font = 2
; Default
hook-0 = echo ""
; Playing
hook-1 = echo "  "
; Paused
hook-2 = echo " 奈 "
click-left = "spotifyctl -q playpause"
format-foreground = #e0af68

[module/spotify]
type = custom/ipc
; Default
hook-0 = echo ""
; Playing/paused show song name and artist
hook-1 = spotifyctl -q status --format ' [ %artist%: %title% ]'
format-foreground = #9ece6a


;===================================================================



[module/cpu]
type = internal/cpu
; Seconds to sleep between updates
; Default: 1
interval = 0.5
; Available tags:
;   <label> (default)
;   <bar-load>
;   <ramp-load>
;   <ramp-coreload>
format = [  <label>    
format-foreground = #ff9e64
; Available tokens:
;   %percentage% (default) - total cpu load
;   %percentage-cores% - load percentage for each core
;   %percentage-core[1-9]% - load percentage for specific core
label = %percentage%%



[module/temp]
type = internal/temperature
thermal-zone = 0
warn-temperature = 70
format-foreground = #ff9e64
format =  ,  <label> ]
label = %temperature-c%



[module/memory]
type = internal/memory
interval = 2
format = [ ﬙ <label> ]
label = %percentage_used%%
;label = %gb_used%
format-foreground = #bb9af7



[module/pulseaudio]
type = internal/pulseaudio
format-volume = [ <ramp-volume> <label-volume> ]
format-muted-prefix = [ ﱝ
label-muted = Muted ]
format-volume-foreground = #7aa2f7
format-muted-foreground = #7aa2f7
;format-volume-background = #414868
;format-muted-background = #414868
ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 墳



[module/date]
type = internal/date
date = %d-%m-%Y
format =[  <label> ]
label = %date%
format-foreground = #e0af68



[module/time]
type = internal/date
time = %I:%M
date = %d-%m-%Y
format = [  <label> ]
label = %time%
;format-background = #a9b1d6
format-foreground = #f7768e 




