throttle-output-for = 10
;throttle-input-for = 30
screenchange-reload = true
pseudo-transparency = true

[module/bspwm]
type = internal/bspwm
pin-workspaces = true
enable-click = true
fuzzy-match = true
enable-scroll = false
label-focused = 
label-focused-foreground = #f7768e
label-focused-padding = 1
label-occupied = 
label-occupied-foreground = #c0caf5
